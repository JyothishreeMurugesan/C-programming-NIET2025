#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main()
{
    char s[100];
    int len,i,j,k;
    scanf("%s",&s[i]);
    len=strlen(s);
    for(i=0;i<len;i++)
    {
        if(isdigit(s[i]))
        {
            printf("Invalid input");
            return 0;
        }
        for(j=0;j<len-i-1;j++)
        {
            printf(" ");
        }
        for(k=0;k<=i;k++)
        {
            printf("%c",s[k]);
            if(k<=i-1)
            {
                printf(" ");
            }
        }
        printf("\n");
    }
}
