#include<stdio.h>
int main()
{
    int n,i,j,k;
    scanf("%d",&n);
    if(n%2==0)
    {
        printf("Invalid Input");
    }
    else
    {
        for(i=0;i<n;i+=2)
        {
            for(j=0;j<i/2;j++)
            {
                printf(" ");
            }
                for(k=0;k<n-i;k++)
                {
                    printf("*");
                }
            printf("\n");
        }
    }
}
